<UserControl
    x:Class="Caritathelp.All.GUI.PopField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="585"
    d:DesignWidth="400">

    <Grid Width="400" Height="585" Background="#52254D32">
        <Border Width="312" Height="400" CornerRadius="5" Background="#E4F7DD" BorderThickness="3.5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,126,0,0" BorderBrush="#FFBFCACC">
            <Grid>
                <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="0" HorizontalAlignment="Left" Height="400" Margin="-3,-3,0,-4" VerticalAlignment="Top" Width="308">
                    <Grid>
                        <Border  Background="#FF53A634" Margin="0,0,-3,345" BorderThickness="3.5,3.5,3.5,0" >
                            <Grid Height="52" VerticalAlignment="Top" Margin="-0.333,-0.333,54.333,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="43*"/>
                                    <ColumnDefinition Width="33*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="textBlock" HorizontalAlignment="Left"  TextWrapping="Wrap" Text="Options" VerticalAlignment="Top" Height="34" Width="300" FontSize="18" FontWeight="Bold" TextAlignment="Center" LineHeight="6" Margin="5,11,-54.167,0" Grid.ColumnSpan="2"/>
                                <Button x:ConnectionId='3'                     x:Name="button" Content="" HorizontalAlignment="Left" Margin="54.333,-3,-54.167,-3" VerticalAlignment="Stretch" BorderBrush="{x:Null}" Foreground="{x:Null}" Width="90" Grid.Column="1" RenderTransformOrigin="0.456,0.389">
                                    <Button.Background>
                                        <ImageBrush Stretch="Uniform" ImageSource="ms-appx:///Assets/cancel.png"/>
                                    </Button.Background>
                                </Button>
                            </Grid>
                        </Border>

                        <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="2" HorizontalAlignment="Left" Height="54" Margin="17,332,0,0" VerticalAlignment="Top" Width="278">
                            <Grid Background="#FF53A634"  Margin="-1.667,-1.667,-5.167,-2.5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="31*"/>
                                    <ColumnDefinition Width="137*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:ConnectionId='2'                     x:Name="deleteButton" Content="Supprimer" HorizontalAlignment="Left" Margin="0,-5,-9.167,0" VerticalAlignment="Top" Height="58" Width="290" BorderBrush="{x:Null}" BorderThickness="0" FontSize="14" Grid.ColumnSpan="2"/>
                                <Image x:Name="image" HorizontalAlignment="Left" Height="34" Margin="20,10,0,0" VerticalAlignment="Top" Width="43" Source="ms-appx:///Assets/delete.png" RenderTransformOrigin="0.543,0.507"/>

                            </Grid>
                        </Border>
                        <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="2" HorizontalAlignment="Left" Height="54" Margin="17,264,0,0" VerticalAlignment="Top" Width="278">
                            <Grid Background="#FF53A634"  Margin="-1.667,-1.667,-2.333,-2.333">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="31*"/>
                                    <ColumnDefinition Width="137*"/>
                                </Grid.ColumnDefinitions>
                                <Button x:ConnectionId='1'                      x:Name="updateButton" Content="Editer" HorizontalAlignment="Left" Margin="1,-5,-9.667,0" VerticalAlignment="Top" Height="58" Width="287" BorderBrush="{x:Null}" BorderThickness="0" FontSize="14" Grid.ColumnSpan="2"/>
                                <Image x:Name="image2" HorizontalAlignment="Left" Height="34" Margin="20,10,0,0" VerticalAlignment="Top" Width="43" Source="ms-appx:///Assets/update.png" RenderTransformOrigin="0.543,0.507"/>

                            </Grid>
                        </Border>
                        <Border Background="White" CornerRadius="5" Margin="20,69,13,157" BorderThickness="2" BorderBrush="#FFBFCACC" >
                            <TextBox x:Name="contentBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Margin="-1.667,-1.667,-0.667,-2.333" Height="174" Width="274" BorderThickness="2" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="16" Foreground="#FF72888E"/>
                        </Border>

                    </Grid>
                </Border>
                <Grid HorizontalAlignment="Left" Height="100" Margin="285,304,-5,-4" VerticalAlignment="Top" Width="100"/>
            </Grid>
        </Border>
    </Grid>



</UserControl>

