<UserControl
    x:Class="Caritathelp.All.GUI.CreateGUI.ComboBoxControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All.GUI.CreateGUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="380" Height="59.645">

    <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="1.5" Background="White" Margin="0,0,0,0.167">
        <Grid>
            <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="1.5" HorizontalAlignment="Left" Height="34" Margin="10,10,0,0" VerticalAlignment="Top" Width="230">
                <Grid Margin="0.333,0.333,0,-1.833">
                    <Rectangle RadiusX="5" RadiusY="5" Fill="#FF53A634" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="38" StrokeThickness="0"/>
                    <Image x:Name="image" HorizontalAlignment="Left" Height="32" VerticalAlignment="Top" Width="35" Source="ms-appx:///Assets/sexe.png" Margin="3,0,0,0"/>
                    <TextBlock x:Name="typeDateBox" HorizontalAlignment="Left" Margin="88,7,0,0" TextWrapping="Wrap" Text="Sexe" VerticalAlignment="Top" Foreground="#FF424849" Height="22" Width="105" FontSize="14" TextAlignment="Center"/>
                </Grid>
            </Border>
            <ComboBox x:ConnectionId='1'                                                                                   x:Name="comboBox" HorizontalAlignment="Left" Margin="251,-1,0,0" VerticalAlignment="Top" Width="120" Height="108" Background="#FF53A634" FontSize="20" SelectedIndex="0">
                <x:String>Femme</x:String>
                <x:String>Homme</x:String>
            </ComboBox>
        </Grid>
    </Border>
</UserControl>

