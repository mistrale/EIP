<Page
    x:Class="Caritathelp.InformationAssociation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <TextBox x:Name="description" HorizontalAlignment="Left" Margin="10,268,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" BorderBrush="#FF4BAF50" Width="380" Height="133" Foreground="#FF4BAF50" TextAlignment="Justify"/>
        <TextBox x:Name="logoText" HorizontalAlignment="Left"
        	Margin="12,452,0,0" TextWrapping="Wrap"
        	Text="Logo" VerticalAlignment="Top"
        	Height="44" Width="185" Foreground="#FF4BAF50" BorderBrush="#FF4BAF50"/>
        <Button x:ConnectionId='1' x:Name="logoButton" Content="Choisir fichier" 
        	                       
        	HorizontalAlignment="Left" Margin="206,440,0,0"
        	VerticalAlignment="Top" Foreground="White"
        	Background="#FF4BAF50" BorderThickness="0"
        	Height="63" Width="185" RenderTransformOrigin="0.494,0.19"/>
        <Button x:ConnectionId='2' x:Name="updateButton"
        	Content="Modifier"
        	HorizontalAlignment="Left" Margin="12,492,0,0"
        	VerticalAlignment="Top" Background="#FF4BAF50"
        	                              
        	BorderThickness="0" Width="380" Height="54"/>
        <TextBox x:Name="warning" HorizontalAlignment="Left" Margin="12,544,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" TextAlignment="Center" Foreground="#FF4BAF50"/>
        <TextBox x:Name="logoText_Copy" HorizontalAlignment="Left"
        	Margin="12,404,0,0" TextWrapping="Wrap"
        	Text="Date de création" VerticalAlignment="Top"
        	Height="44" Width="185" Foreground="#FF4BAF50" BorderBrush="#FF4BAF50" IsReadOnly="True"/>
        <DatePicker Name="birthday" HorizontalAlignment="Left" Margin="205,396,0,0" VerticalAlignment="Top" Foreground="#FF4BAF50" Width="185" Height="67"/>
        <Rectangle HorizontalAlignment="Left" Height="201" Margin="10,62,0,0" Stroke="Black" VerticalAlignment="Top" Width="380">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4BAF50" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Ellipse HorizontalAlignment="Left"
                 Height="126" Margin="129,84,0,0" Stroke="Black"
                 VerticalAlignment="Top" Width="145">
            <Ellipse.Fill>
                <ImageBrush ImageSource="ms-appx:/Assets/Logo.png"/>
            </Ellipse.Fill>
        </Ellipse>
        <local:Menu HorizontalAlignment="Left" Margin="0,589,0,0" VerticalAlignment="Top" Width="400"/>
        <TextBox x:Name="title" HorizontalAlignment="Left" Margin="10,215,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" BorderBrush="{x:Null}" Width="380" Height="43" Foreground="#FF4BAF50" TextAlignment="Center" Background="{x:Null}"/>
        <Grid HorizontalAlignment="Left" Height="49" Margin="1,-1,0,0" VerticalAlignment="Top" Width="399" Background="#FF4BAF50"/>
        <Button x:ConnectionId='3' x:Name="Back" Content="Previous"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="53" Margin="6,-6,0,0" BorderThickness="0" 
                RenderTransformOrigin="0.557,1.219"
                                   />
        <TextBox x:Name="textBox" TextWrapping="Wrap"
                 Text="Informations" VerticalAlignment="Top"
                 Background="{x:Null}"
                 Foreground="White" Height="43" FontSize="24"
                 FontWeight="Bold" IsReadOnly="True" TextAlignment="Center" Margin="72,1,53,0" BorderBrush="{x:Null}"/>
    </Grid>
</Page>

