<Page
    x:Class="Caritathelp.MemberAssociation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <ScrollViewer HorizontalAlignment="Left" Height="510"
                      Margin="10,61,0,0" VerticalAlignment="Top"
                      Width="380" Name="scroll"/>
        <Grid HorizontalAlignment="Left" Height="56" VerticalAlignment="Top" Width="400" Background="#FF4BAF50"/>
        <Button x:ConnectionId='1' x:Name="Back" Content="Previous"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="53" Margin="0,-10,0,0" BorderThickness="0" 
                RenderTransformOrigin="0.557,1.219"
                                   />
        <TextBox x:Name="textBox" HorizontalAlignment="Left"
                 Margin="55,-1,0,0" TextWrapping="Wrap"
                 Text="Liste des membres" VerticalAlignment="Top"
                 Background="{x:Null}" Width="345"
                 Foreground="White" Height="57" FontSize="24"
                 FontWeight="Bold" IsReadOnly="True" TextAlignment="Center" BorderBrush="{x:Null}"/>
        <local:Menu HorizontalAlignment="Left" Margin="0,592,0,0" VerticalAlignment="Top" Width="400"/>
    </Grid>
</Page>

