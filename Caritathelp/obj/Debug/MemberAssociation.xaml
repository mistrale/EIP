<Page
    x:Class="Caritathelp.MemberAssociation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <TextBox x:Name="textBox" HorizontalAlignment="Left"
                 Margin="2,0,0,0" TextWrapping="Wrap"
                 Text="Liste des membres" VerticalAlignment="Top"
                 Background="#FFC0D7A8" Width="398"
                 Foreground="White" Height="57" FontSize="24"
                 FontWeight="Bold" TextAlignment="Right" IsReadOnly="True"/>
        <Button x:ConnectionId='1' x:Name="Back" Content="Previous"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Width="53" Margin="0,-10,0,0" BorderThickness="0" 
                RenderTransformOrigin="0.557,1.219"
                                   />
        <ScrollViewer HorizontalAlignment="Left" Height="518"
                      Margin="10,112,0,0" VerticalAlignment="Top"
                      Width="380" Name="scroll"/>
        <TextBox x:ConnectionId='2' x:Name="searchBox" HorizontalAlignment="Left"
                 Margin="10,62,0,0" TextWrapping="Wrap"
                                                   
                 
                 Text="Rechercher..." VerticalAlignment="Top" Width="380"/>

    </Grid>
</Page>

