<UserControl
    x:Class="Caritathelp.All.GUI.PictureControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="380"
    d:DesignWidth="380">

    <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="1.5" Background="White" Margin="0,0,0,0.667">

        <Grid>
            <Ellipse x:Name="image" HorizontalAlignment="Left" Height="324" Margin="10,43,0,0" Stroke="#FFACB8AE" VerticalAlignment="Top" Width="357">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="ms-appx:/Assets/Logo.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <Grid Name="grid" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="384" Margin="0,0,-7,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="317*"/>
                    <ColumnDefinition Width="67*"/>
                </Grid.ColumnDefinitions>
                <Border CornerRadius="5" BorderBrush="#FFC2C2C2" BorderThickness="0,1,1,1" HorizontalAlignment="Left" Height="38" Margin="0.5,0,0,0" VerticalAlignment="Top" Width="59" Background="#FFFF6E6E" Grid.Column="1"/>
                <Border CornerRadius="5" BorderBrush="#FFB3B3B3" BorderThickness="1" HorizontalAlignment="Left" Height="38" VerticalAlignment="Top" Width="318" Background="#FF53A634" Grid.ColumnSpan="2">
                    <Button x:ConnectionId='2' x:Name="defaut"                       Content="Définir comme image par défaut" HorizontalAlignment="Left" Margin="0.167,-11.833,-1.5,-8.5" VerticalAlignment="Top" Width="318" BorderBrush="{x:Null}"/>
                </Border>
                <Button x:ConnectionId='1' x:Name="delete"                       Content="" HorizontalAlignment="Left" Margin="292,-10,-16.833,0" VerticalAlignment="Top" Width="58" BorderThickness="0" BorderBrush="{x:Null}" Grid.ColumnSpan="2">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="ms-appx:///Assets/delete.png"/>
                    </Button.Background>
                </Button>
            </Grid>
        </Grid>
    </Border>
</UserControl>

