<UserControl
    x:Class="Caritathelp.All.GUI.Notification"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="380" Height="112.956">

    <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="1.5" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="304"/>
                <ColumnDefinition  Width="73*" x:Name="secondCol" />
            </Grid.ColumnDefinitions>
            <Ellipse x:Name="logo" Height="73" VerticalAlignment="Top" Margin="10,19,220.333,0" Stroke="#FF69B578">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="ms-appx:/Assets/Logo.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <Border CornerRadius="5" BorderThickness="1" HorizontalAlignment="Left" Height="46" Margin="11.667,58,0,0" VerticalAlignment="Top" Width="52" Background="#FFFF6E6E" Grid.Column="1">
                <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="-28.833,-7.833,-30.167,-8.5" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="58" Width="109">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="ms-appx:///Assets/checkKO.png"/>
                    </Button.Background>
                </Button>
            </Border>
            <Border CornerRadius="5" BorderThickness="1" HorizontalAlignment="Left" Height="46" Margin="11.667,7,0,0" VerticalAlignment="Top" Width="52" Background="#FF53A634" Grid.Column="1">
                <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="-28.833,-7.833,-30.167,-8.5" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="58" Width="109">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="ms-appx:///Assets/checkOk.png"/>
                    </Button.Background>
                </Button>
            </Border>
            <TextBlock Grid.Column="0" x:Name="contentBox" HorizontalAlignment="Left" Margin="89,19,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="81" Width="205" Foreground="#FF72888E" FontSize="16" TextAlignment="Justify"/>
        </Grid>
    </Border>
</UserControl>

