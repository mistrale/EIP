<UserControl
    x:Class="Caritathelp.All.GUI.InputBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Border Width="312" Height="203" CornerRadius="5" Background="#FFF0F4F5" BorderThickness="3.5" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="#FFBFCACC" Margin="48,62,0,0">
            <Grid>
                <Border Name="border" CornerRadius="5" BorderThickness="1" HorizontalAlignment="Left" Height="43" VerticalAlignment="Top" Width="305" Background="#FF53A634">
                    <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Urgence" Margin="0.167,9.167,-0.833,1.5" FontSize="16" TextAlignment="Center" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="5"  BorderBrush="#FFF0F4F5" BorderThickness="1" HorizontalAlignment="Left" Height="41" Margin="20,146,0,0" VerticalAlignment="Top" Width="120" Background="#FF53A634" RenderTransformOrigin="0.573,1.434">
                    <Button x:ConnectionId='4'                         x:Name="confirmButton_Copy1" Content="Envoyer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="{x:Null}" Foreground="White" BorderThickness="0" Margin="-0.833,-9.833,1.167,-12" Background="{x:Null}" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="5"  BorderBrush="#FFF0F4F5" BorderThickness="1" HorizontalAlignment="Left" Height="41" Margin="162,146,0,0" VerticalAlignment="Top" Width="122" Background="#FFFF6E6E" RenderTransformOrigin="0.573,1.434">
                    <Button x:ConnectionId='3'                x:Name="refuseButton" Content="Annuler" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontWeight="Bold" BorderThickness="0" Margin="1.167,-10.833,-1.167,-8"/>
                </Border>
                <TextBox x:ConnectionId='1'                              x:Name="textBox" HorizontalAlignment="Left" Margin="10,48,0,0" TextWrapping="Wrap" Text="Nombre de volontaires a inviter" VerticalAlignment="Top" Width="285" FontSize="16" FontStyle="Italic" Foreground="Gray" BorderBrush="#FFE1E2E2"/>
                <TextBox x:ConnectionId='2'                              x:Name="textBox2" HorizontalAlignment="Left" Margin="10,92,0,0" TextWrapping="Wrap" Text="Distance maximum (km2)" VerticalAlignment="Top" Width="285" FontSize="16" FontStyle="Italic" Foreground="Gray" BorderBrush="#FFE1E2E2"/>

            </Grid>
        </Border>
    </Grid>
</UserControl>

