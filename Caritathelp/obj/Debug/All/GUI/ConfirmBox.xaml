<UserControl
    x:Class="Caritathelp.All.GUI.ConfirmBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="585"
    d:DesignWidth="400">

    <Grid Width="400" Height="585" Background="#52254D32">
        <Border Width="223" Height="191" CornerRadius="5" Background="#FFF0F4F5" BorderThickness="3.5" HorizontalAlignment="Left" VerticalAlignment="Top" BorderBrush="#FFBFCACC" Margin="96,171,0,0">
            <Grid Margin="-0.333,-0.333,-3.667,0.333">
                <TextBlock x:Name="errorBlock" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Etes-vous sûr d'effectuer cette action ?" VerticalAlignment="Top" Margin="10,48,0,0" Height="66" Width="201" Foreground="#FF72888E" FontSize="14" LineHeight="14" TextAlignment="Justify"/>
                <Border Name="border" CornerRadius="5" BorderThickness="0,0,2,0" HorizontalAlignment="Left" Height="43" VerticalAlignment="Top" Width="221" Background="#FF53A634" BorderBrush="#FFCBC8C8">
                    <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="Confirmation" Margin="8.167,9.167,53,1.5" FontSize="16" TextAlignment="Center" FontWeight="Bold"/>
                </Border>
                <Button x:ConnectionId='1' x:Name="button"                         Content="Button" HorizontalAlignment="Left" Margin="125,-8,-13,0" VerticalAlignment="Top" Width="54" BorderBrush="{x:Null}" BorderThickness="0" RenderTransformOrigin="0.371,0.476" Foreground="{x:Null}" Height="47">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="ms-appx:///Assets/cancel.png"/>
                    </Button.Background>
                </Button>
                <Border CornerRadius="5" BorderBrush="#FFF0F4F5" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="23,119,0,0" VerticalAlignment="Top" Width="74" Background="#FF53A634">
                    <Button x:ConnectionId='3'                        x:Name="yesButton" Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="{x:Null}" Foreground="{x:Null}" BorderThickness="0" Margin="-29.833,-6.833,-29.167,-7.833">
                        <Button.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="ms-appx:///Assets/checkOk.png"/>
                        </Button.Background>
                    </Button>
                </Border>
                <Border CornerRadius="5" BorderBrush="#FFF0F4F5" BorderThickness="1" HorizontalAlignment="Left" Height="45" Margin="121,119,0,0" VerticalAlignment="Top" Width="74" Background="#FFFF6E6E">
                    <Button x:ConnectionId='2' x:Name="noButton"                        Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderBrush="{x:Null}" Foreground="{x:Null}" BorderThickness="0" Margin="-29.833,-6.833,-29.167,-7.833">
                        <Button.Background>
                            <ImageBrush Stretch="Uniform" ImageSource="ms-appx:///Assets/checkKO.png"/>
                        </Button.Background>
                    </Button>
                </Border>

            </Grid>
        </Border>
    </Grid>
</UserControl>

