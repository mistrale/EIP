<Page
    x:Class="Caritathelp.All.FinalInscription"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FF4BAF50">
        <TextBox x:ConnectionId='1' x:Name="EmailTextBox" 
                 HorizontalAlignment="Left" 
                 Margin="25,112,0,0" 
                 TextWrapping="Wrap" 
                                            
                 Text="Email"
                 VerticalAlignment="Top"
                 Height="57" Width="353"
                 FontSize="29.333"
                 Background="White"
                 Foreground="#FF5C5555" />
        <PasswordBox x:ConnectionId='2' x:Name="PasswordPasswordBox" 
                 HorizontalAlignment="Left"
                 Password="password"
                 Margin="25,196,0,0"  
                 FontSize="29.333"
                 Background="White"
                 Foreground="#FF5C5555"
                                                
                 VerticalAlignment="Top"
                 Height="57" 
                 Width="353"/>
        <PasswordBox x:ConnectionId='3' x:Name="PasswordConfirmationPasswordBox" 
        	HorizontalAlignment="Left"
        	Password="password"
        	Margin="25,277,0,0"  
        	FontSize="29.333"
        	Background="White"
        	Foreground="#FF5C5555"
        	                               
        	VerticalAlignment="Top"
        	Height="57" 
        	Width="353"/>
        <CheckBox x:Name="conditionBox" Content="Accepter les conditions d'utilisations"
                  HorizontalAlignment="Left" Margin="25,356,0,0"
                  VerticalAlignment="Top" Width="353" Height="61"/>
        <CheckBox x:Name="geolocalisationBox" Content="Accepter la géolocalisation"
        	HorizontalAlignment="Left" Margin="25,411,0,0"
        	VerticalAlignment="Top" Width="353" Height="61"/>
        <Button x:ConnectionId='4' x:Name="RegisterButton"
                Content="S'enregistrer" HorizontalAlignment="Left" 
                Margin="25,460,0,0" VerticalAlignment="Top"
                                      
                Height="70" Width="353" Background="#FF4C4949" BorderThickness="0"/>
        <TextBlock x:Name="warningTextBlock" 
                   HorizontalAlignment="Left" Margin="25,583,0,0"
                   TextWrapping="Wrap" VerticalAlignment="Top" 
                   Height="44" Width="353" Foreground="#FFF31919"
                   FontSize="24" TextAlignment="Center"/>
        <ProgressRing Name="progressBar"
                      HorizontalAlignment="Left"
                      Margin="167,580,0,0" VerticalAlignment="Top"/>
        <Image x:Name="image" HorizontalAlignment="Left" Height="84" Margin="18,11,0,0" VerticalAlignment="Top" Width="92" Source="ms-appx:///Assets/2017_logo_caritathelp.png"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="99,31,0,0" TextWrapping="Wrap" Text="Caritathelp" VerticalAlignment="Top" Height="56" Width="235" FontSize="36" TextAlignment="Center" FontWeight="Bold"/>
        <Button x:ConnectionId='5' x:Name="RegisterButton_Copy"
            Content="Annuler" HorizontalAlignment="Left" 
            Margin="25,516,0,0" VerticalAlignment="Top"
                                             
            Height="70" Width="353" Background="#FF4C4949" BorderThickness="0"/>
    </Grid>
</Page>

