<UserControl
    x:Class="Caritathelp.All.GUI.InvitationWaiting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All.GUI"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="370" Height="68.107">

    <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="1.5" Background="White" Margin="0,0,0,0.667">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="304"/>
                <ColumnDefinition  Width="73*" x:Name="secondCol" />
            </Grid.ColumnDefinitions>
            <Ellipse x:Name="logo" Height="46" VerticalAlignment="Top" Margin="10,10,247,0" Stroke="#FF69B578">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="ms-appx:/Assets/Logo.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <Border CornerRadius="5" BorderThickness="1" HorizontalAlignment="Left" Height="46" Margin="0,10,0,0" VerticalAlignment="Top" Width="52" Background="#FFFF6E6E" Grid.Column="1">
                <Button x:ConnectionId='2'                       x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="-28.833,-7.833,-30.167,-8.5" VerticalAlignment="Top" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="58" Width="109">
                    <Button.Background>
                        <ImageBrush Stretch="Uniform" ImageSource="ms-appx:///Assets/cancel.png"/>
                    </Button.Background>
                </Button>
            </Border>
            <Button x:ConnectionId='1'                    x:Name="contentButton" Content="Button" HorizontalAlignment="Left" Margin="67,5,0,0" VerticalAlignment="Top" Foreground="#FF72888E" FontWeight="Bold" Width="223" BorderThickness="0"/>
        </Grid>
    </Border>
</UserControl>

