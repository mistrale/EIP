<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Caritathelp.All"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local1="using:Caritathelp"
    xmlns:GUI="using:Caritathelp.All.GUI"
    x:Class="Caritathelp.All.Research"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="White">
        <local:BasePage HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="639"/>
        <Button x:Name="alertButtonNotity" Content=""
			HorizontalAlignment="Left" Margin="208,0,0,0"
			VerticalAlignment="Top"
			RenderTransformOrigin="0.38,0.334" BorderThickness="0" Visibility="Collapsed">
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/AlertButtonNotified.png"/>
            </Button.Background>
        </Button>
        <ScrollViewer x:Name="scroll" Background="#FFE4F7DD" HorizontalAlignment="Left"
			Margin="13,129,0,0" 
			VerticalScrollBarVisibility="Visible" 
			VerticalScrollMode="Enabled" 
			AllowDrop="False" 
			VerticalAlignment="top"
			BringIntoViewOnFocusChange="True"
			HorizontalScrollMode="Disabled"
			IsHoldingEnabled="True" Height="448" Width="375"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="-5,7,0,0" TextWrapping="Wrap" Text="Recherche" VerticalAlignment="Top" Height="34" Width="395" FontSize="24" FontWeight="Bold" TextAlignment="Center"/>
        <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="1.5" HorizontalAlignment="Left" Height="67" Margin="10,57,0,0" VerticalAlignment="Top" Width="377" Background="#FFFFFBFB"/>
        <Border CornerRadius="5" BorderBrush="#FFBFCACC" BorderThickness="1.5" HorizontalAlignment="Left" Height="39" Margin="28,69,0,0" VerticalAlignment="Top" Width="340" Background="White"/>
        <Rectangle Fill="#FF53A634" HorizontalAlignment="Left" Height="39" Margin="314,69,0,0" VerticalAlignment="Top" Width="54" StrokeThickness="0"/>
        <Button x:Name="searchButton" Click="search_Click" Content="" HorizontalAlignment="Left" Margin="288,60,0,0" VerticalAlignment="Top" BorderThickness="0">
            <Button.Background>
                <ImageBrush ImageSource="ms-appx:/Assets/search.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
        <TextBox TextChanged="searchBox_TextChanged" x:Name="searchBox" GotFocus="searchTextBox_GotFocus"
			HorizontalAlignment="Left" Margin="33,71,0,0" TextWrapping="Wrap" Text="Rechercher..." VerticalAlignment="Top" Width="277" Foreground="#FFBFCACC" BorderBrush="{x:Null}" Background="{x:Null}"/>
        <GUI:ErrorControl x:Name="errControl" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Collapsed"/>
    </Grid>
</Page>
